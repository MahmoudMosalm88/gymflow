{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"]
    }
  },
  "include": [
    "src/renderer/src/**/*",
    "src/renderer/*.d.ts"
  ],
  "exclude": [
    "src/renderer/src/**/*.d.ts",
    "out",
    "dist",
    "build",
    "release",
    "out/**/*.d.ts",
    "dist/**/*.d.ts"
  ]
}
