{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "noEmit": false
  },
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*"
  ],
  "exclude": [
    "electron.vite.config.d.ts",
    "src/main/**/*.d.ts",
    "src/preload/**/*.d.ts",
    "out",
    "dist",
    "build",
    "release",
    "out/**/*.d.ts",
    "dist/**/*.d.ts"
  ]
}
